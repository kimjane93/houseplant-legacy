<%- include('../partials/header') %>

<main>
  <div class="card text-center shadow p-3 mb-5 bg-white rounded m-3" style="width: 30rem;">
    <img src="<%= message.avatar %>" class="card-img-top" alt="plant-image">
    <div class="card-body">
      <h5 class="card-title"><%= message.title %> </h5>
      <p class="card-text">Posted by <%= message.postedBy %> at <%= message.createdAt.toLocaleString() %> </p>
    </div>
    <div class="card-body">
      <% message.replies.forEach(r => { %>
        <h6><%= r.message %> - <%= r.postedBy %> <img id="avatarPhoto" width="25" src="<%= r.avatar %>" alt="profile image"></h6>
      <% }) %>
  
    <form action="/messages/<%= message._id %>" method="POST">
        <div class="form-group">
          <input id="post-input" type="text" name="message" placeholder="Add To The Convo~"><button type="submit">Reply</button>
        </div>
    </form>
    <form action="/messages" method="GET">
      <button type="submit">Return To Message Board</button>
    </form>
    </div>
  </div>

<%- include('../partials/footer') %> 